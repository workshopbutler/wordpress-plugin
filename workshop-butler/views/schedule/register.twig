{% if layout == 'tile' %}
    <div class="wsb-tile-button">
        {% if event.state.closed() %}
            <button disabled class="wsb-btn wsb-btn-primary wsb-tile-btn">
                {{ wsb_t('schedule.event.soldOut') }}
            </button>
        {% else %}
            <a href="{% if registration == 'true' %} {{ event.registration_page.url }} {% else %} {{ event.get_url() }} {% endif %}"
               class="wsb-btn wsb-btn-primary wsb-tile-btn">
                {{ wsb_t('schedule.event.register') }}
            </a>
        {% endif %}
    </div>
{% else %}
    <div class="wsb-table__col wsb-table__col-register">
        {% if event.state.closed() %}
            <a disabled class="wsb-table__btn">
                {{ wsb_t('schedule.event.soldOut') }}
            </a>
        {% else %}
            <a href="{% if registration == 'true' %} {{ event.registration_page.url }} {% else %} {{ event.get_url() }} {% endif %}"
               class="wsb-table__btn">
                {{ wsb_t('schedule.event.register') }}
            </a>
        {% endif %}
    </div>
{% endif %}
