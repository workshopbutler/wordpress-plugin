{% if layout == 'tile' %}
    {% if event.free %}
        <div class="wsb-free">{{ __('event.free', 'wsbintegration') }}</div>
    {% endif %}
    <a href="{{ event.url }}" class="wsb-tile-title"
            {% if event.is_url_external %} target="_blank" {% endif %}>{{ event.title|truncate(60) }}</a>
{% else %}
    <div class="wsb-table__col wsb-table__col-title {% if event.type.badge %} with-badge {% endif %} ">
        {% if event.type.badge %}
            <img class="wsb-table__img" src="{{ event.type.badge }}">
        {% endif %}
        <a href="{{ event.url }}" class="wsb-table__link" {% if event.is_url_external %} target="_blank" {% endif %}>
            {{ event.title }}
        </a>
        {% if event.free %}
            <div class="wsb-free">{{ wsb_t('schedule.event.free') }}</div>
        {% endif %}
    </div>
{% endif %}
