<div class="{% if layout == 'table' %} wsb-table__row {% else %} wsb-tile {% endif %}
    {% if highlight_featured and event.featured %} wsb-featured {% endif %}"
     data-event-obj
     data-event-type="{{ event.type.id }}"
     data-event-location="{{ event.location.country_code }}"
     data-event-language="{{ event.language.spoken| join(',') }}"
     data-event-trainer="{{ event.names_of_trainers| join(',') }}">
    {% if layout == 'table' %}
        {% set mobile = true %}
    {% endif %}
    {{ include('tag.twig') }}
    {{ content | raw }}
</div>
